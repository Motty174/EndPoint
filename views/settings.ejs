<%- include ('components/header') %>
<link rel="stylesheet" href="/styles/settings.css">

<div class="d-flex justify-content-center">
<div class="d-flex flex-column justify-content-center">
    <div class="position-relative" id="image_holder" >
        <form id="image_change" action="/settings" method="post" enctype="multipart/form-data" hidden>
            <input type="file" name="image">
            <input type="submit" value="Change">
        </form>
    <img src=<%= data.image %> class="img-thumbnail"  width="500px" height="500px" alt="" id="image">
    <i id="change" style="position: absolute;top: 0;right: 0; cursor: pointer;" class="fas fa-cog fa-2x"></i>        
</div>
<form action="/settings" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Change name" name="name">
    </div>
    <div class="form-group">
        <label for="date">Date of Birth</label>
        <input type="date" class="form-control" name="date">
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Example textarea</label>
    <textarea class="form-control" name="bio" rows="3"></textarea>
    </div>
    <div class="form-group" >
      <label for="exampleInputPassword1">Password(Currently disabled)</label>
      <input type="password" disabled class="form-control" name="password" placeholder="Password">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>    
</div>
</div>
<br>
<br>
<script src="/scripts/settings.js"></script>