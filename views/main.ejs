<button id="send">Send</button> -->
<p hidden id="current_user_id"><%= data._id %></p>
<p hidden id="followers_list"><%= data.followers %></p>
<script src="/scripts/config.js"></script>
<script src="/scripts/followerCheck.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/scripts/main_post.js"></script>
