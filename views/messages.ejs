<%- include ('components/header') %>

<div class="d-flex ">
    <div class="w-25 ">
        <h1 class="text-center">Messages</h1>
        <ul id="users" class="list-group btn">
            <% rec.forEach(user => { %>
                <li id=<%= user._id %>  class="list-group-item" >
                    <img src=<%= user.image %> alt="User" width="50px" height="50px">
                    <%= user.name %>
                </li>
                <% }) %>
        </ul>
    </div>
    <div class="position-relative w-100">
        <div id="toWhom">
        </div>
        <hr>
        <div style="background-color: brown;">
        <ul id="message_list" class="list-group w-100">
        </ul>
        </div>
        <div class="input-group mb-3 fixed-bottom position-absolute" style="bottom: 0px;">
            <form action="/messages" method="post" id="send">
            <input type="text" class="form-control" id="text" placeholder="Text here" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <div class="input-group-append">
              <button class="btn btn-outline-secondary"  type="button">Button</button>
            </form>
        
            </div>
          </div>
          
    </div>
</div>
<p hidden id="myInfo"><%= data %></p>
<script src="/socket.io/socket.io.js"></script>
<script src="/scripts/messages.js"></script>