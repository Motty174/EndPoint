<%- include ('components/header') %>
<link rel="stylesheet" href="/styles/main.css">
<div class="flexbox">
    <!-- User info -->
    <div class=" m-2 text-white main_info">
        <div class="user_info" >
            <img style="width: 100%;max-width:450px;height: auto;"  src=<%= data.image %> alt="Main picture user" class="user_image rounded-circle" id="user_image">
            <br><br>
            <p class="user_name" id="user_name"><%= data.name %></p>
            <p class=" bio text-center w-100" > "<%= data.bio %>"</p>
            <ul class="user_info_bar">
                <li ><a href="/messages"><i class="fas fa-envelope fa-2x" ></i></a></li>
                <li ><a href="/users"><i class="fas fa-users fa-2x"></i></a></li>
                <li ><a href="#"><i class="fas fa-bell fa-2x"></i></a></li>
                </ul>
                <hr>
            <ul class="user_friends p-0 m-0">
                <li >Followers</li>
                <li><a href="/followers/<%= data._id %>" id="followers">0</a></li>
                <hr>
                <li >Following</li>
                <li><a href="/followings/<%= data._id %>" id="following">0</a></li>
                <hr>        
            </ul>
            <br>
            <div class="user_viwe_profile">
                <a href="/users/<%= data._id %>" >View profile</a>
            </div>
        </div>
            <br>
            <!-- Suggestions -->
    <div class="suggestions">
        <p class="text-primary " id="online">Online: 0</p>
    </div>
      
    
    </div>
    <!-- News feed -->
    <div class="newsfeed">
        <div id="posts_list">
            <form action="/" method="post" id="main_post" >
                <div class="form-group position-relative">
                    <textarea class="form-control" placeholder="Want to share your day with your friends?" rows="2" id="textarea_post"></textarea>
                    <button style="border: none;" type="submit">
                        <i class="fas fa-share fa-2x news_post_send"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="d-flex flex-column " id="post_handler">
                    <% data.posts.forEach( post => { %>
                        <div class="text-black d-flex border border-outline-primary p-3">
                            <a href="/users/<%= post.user_id %>">
                                <img  style="width: 50px;height: 50px;border-radius: 50%;cursor: pointer;" src=<%= post.user_image %> alt="User image" class="p-2 border border-outline-dark" >
                            </a>
                            <div class="d-flex flex-column p-0 m-0 w-100">
                                <div class="d-flex flex-column p-2 m-0">
                                    <p class="m-0 p-0"><b> <%= post.user_name %> </b></p>
                                    <span> <%= new Date(post.date) %></span>
                                </div>

                                <p class="m-4" style="word-break: break-all;word-wrap: break-word;"> <%= post.text %> </p>

                                <div class="d-flex justify-content-between">
                                        <button class="btn btn-outline-success">Like</button>
                                        <button class="btn btn-outline-primary">Comment</button>
                                        <button class="btn btn-outline-warning">Share</button>
                                    </div>
                            </div>
                        </div>
                        <% }) %>
        </div>
    </div>
    <!-- Online friends -->

</div>
<br>
<br>
<br>
